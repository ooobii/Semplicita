@using Semplicita.Models
@model ProjectUsersViewModel

@{ 
    ViewBag.Title = "Manage User Allocation";

    var roleHelper = new Semplicita.Helpers.UserRolesHelper();

}

<div class="jumbotron">
    <h1>Manage User Assignments</h1>
    <p class="lead">Select reporters &amp; solvers to assign them to projects.</p>
</div>


<div class="form-group">

    <div class="row">
        <div class="col-12">
            <h3>Step 1: Select Users</h3>
            <div class="select2-purple">
                <select class="select2" multiple="multiple" data-placeholder="Select or Type Name..." data-dropdown-css-class="select2-purple" style="width: 100%;">
                    @foreach( ApplicationUser u in Model.Users ) {
                        <option value="@u.Id">@u.FullNameStandard</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <br />
    <hr />
    <br />

    <div class="row">
        <div class="col-12">
            <h3>Step 2: Select Projects</h3>
            <div class="select2-purple">
                <select class="select2" multiple="multiple" data-placeholder="Select a State" data-dropdown-css-class="select2-purple" style="width: 100%;">
                    @foreach( Project p in Model.Projects ) {
                        <option value="@p.Id">@p.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <br />
    <hr />

    <div class="row">
        <div class="col-6">
            <input type="submit" value="Remove User(s) to Project(s)" class="btn btn-danger btn-block" />
        </div>
        <div class="col-6">
            <input type="submit" value="Add User(s) to Project(s)" class="btn btn-success btn-block" />

        </div>
    </div>

</div>

@section Scripts {
    <script>

    </script>


    <!-- select2 Init -->
    <script>
        $(document).ready(function () {
            //Initialize Select2 Elements
            $('.select2').select2()

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

        })
    </script>
}