@using Semplicita.Models
@model ForgotPasswordViewModel
@{
    Layout = null;
    ViewBag.Title = "Email Sent!";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Email Sent!</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/icheck-bootstrap/3.0.1/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/adminlte/adminlte.min.css">
    <link rel="stylesheet" href="~/Content/adminlte/adminlte.revisions.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <img class="login-logo-image" src="~/Images/logos/simp_logo_sm.png" />
            <a href=""><b>Simplicita</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <h4 class="pb-3 text-center">Email Sent!</h4>
                @if( ViewBag.EmailSentTo != null ) {
                    <p class="login-box-msg">An email has been sent to @ViewBag.EmailSentTo, containing a link that will allow you to log in!</p>
                } else {
                    <p class="login-box-msg">An email has been sent to the email associated to your account. It will contain a link that will allow you to log in!</p>
                }

            </div>
            <!-- /.login-card-body -->

            <div class="card-footer">
                <a href="@Url.Action("Login", "Account")"><div class="btn btn-primary btn-block">Back to Login</div></a>
            </div>
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/adminlte/adminlte.min.js"></script>
</body>
</html>