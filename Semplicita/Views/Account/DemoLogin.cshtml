@using Semplicita.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Log in - Simplicita";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Semplicita | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/icheck-bootstrap/3.0.1/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/adminlte/adminlte.min.css">
    <link rel="stylesheet" href="~/Content/adminlte/adminlte.revisions.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
    <div class="login-box" style="width:395px;">
        <div class="login-logo">
            <img class="login-logo-image" src="~/Images/logos/simp_logo_sm.png" />
            <a href=""><b>Simplicita</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Select a role to login as a demo user!</p>
                <div class="callout callout-danger">
                    <i class="fas fa-bullhorn"></i> <b>Heads Up</b><br/>
                    Changes made as demo users will not be saved.
                </div>

                @using( Html.BeginForm("DemoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }) ) {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "demo:EmailAdmin")
                    <button type="submit" class="btn btn-outline-danger btn-block">Login as Demo Server Administrator</button>
                }
                @using( Html.BeginForm("DemoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal pt-2", role = "form" }) ) {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "demo:EmailProjAdmin")
                    <button type="submit" class="btn btn-outline-info btn-block">Login as Demo Project Manager</button>
                }


                @using( Html.BeginForm("DemoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal pt-4", role = "form" }) ) {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "demo:EmailSuperSolver")
                    <button type="submit" class="btn btn-outline-dark btn-block">Login as Super Solver</button>
                }
                @using( Html.BeginForm("DemoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal pt-2", role = "form" }) ) {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "demo:EmailSolver")
                    <button type="submit" class="btn btn-outline-secondary btn-block">Login as Solver</button>
                }


                @using( Html.BeginForm("DemoLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal pt-4 pb-3", role = "form" }) ) {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "demo:EmailReporter")
                    <button type="submit" class="btn btn-outline-success btn-block">Login as Reporter</button>
                }

                <hr />

                <p class="mt-3 mb-1">
                    <a href="@Url.Action("Login", "Account")">Back to Account Login</a>
                </p>

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/adminlte/adminlte.min.js"></script>
</body>
</html>